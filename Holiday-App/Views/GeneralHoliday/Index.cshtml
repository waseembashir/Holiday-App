@model IEnumerable<HolidayApp.Core.Model.GeneralHoliday>

@{
    ViewBag.Title = "Index";
}
<h4>@Html.ActionLink("Add General Holiday", "Create", "GeneralHoliday")</h4>
<h4>@Html.ActionLink("Add Islamic Holiday", "CreateIslamic", "GeneralHoliday")</h4>
<h4>@Html.ActionLink("View Calendar(General)", "Calendar", "GeneralHoliday")</h4>
