@model HolidayApp.Core.Model.Holiday

@{
    ViewBag.Title = "Create Holiday";
}
@Html.ActionLink("Home", "Index", "Admin")
<h2>Create Holiday Form An Employee</h2>
<link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Select Employee", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EmployeeNames")
               
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="StartDate" id="StartDate" />  
                @Html.ValidationMessageFor(model => model.StartDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" name="EndDate" id="EndDate" />
                @Html.ValidationMessageFor(model => model.EndDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoOfDays, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoOfDays)
                <div class="halfday">
                    @Html.CheckBox("ishalf")
                    @Html.Label("Any HalfDay")
                    <span id="amorpm">
                        @Html.Label("AM")
                        @Html.RadioButtonFor(model => model.HalfDay, "Morning")
                        @Html.Label("PM")
                        @Html.RadioButtonFor(model => model.HalfDay, "Evening")
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.NoOfDays)
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.HalfDay, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HalfDay)
                @Html.ValidationMessageFor(model => model.HalfDay)
            </div>
        </div>*@

        @*<div class="form-group">
            @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>*@

        

        <div class="form-group">
            @Html.LabelFor(model => model.Holidaytype, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @Html.DropDownList("HolidayType")
                @Html.ValidationMessageFor(model => model.Holidaytype)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HolidayDescription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HolidayDescription)
                @Html.ValidationMessageFor(model => model.HolidayDescription)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery-ui-1.10.4.js")
    @Scripts.Render("~/Scripts/customjs.js")
}

